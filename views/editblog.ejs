<%- include("partials/header.ejs") %>

    <div class="text-center">
        <h1 class="pt-5 display-4 fw-bold text-body-emphasis mainHeading">Edit Your Blog</h1>
    </div>

    <form action="/update/<%= id %>" method="POST" class="form123 py-3 mb-5"></form>

    <div class="mb-3 d-flex flex-wrap align-items-center justify-content-center">
        <!-- <label for="blogTitle" class="form-label">Blog Title</label> -->
        <input name="blogTitle" type="text" class="form-control" id="blogTitle" value="<%= blog.title %>" required>
    </div>

    <div class="mb-3 d-flex flex-wrap align-items-center justify-content-center">
        <!-- <label for="blogContent" class="form-label">Blog Content</label> -->
        <textarea name="blogContent" class="form-control" id="blogContent" rows="12"
            required><%= blog.content %></textarea>
    </div>

    <div class="d-flex justify-content-center py-3">
        <button type="submit" class="btn btn-primary">Update Blog</button>
    </div>

    </form>


    <%- include("partials/footer.ejs") %>