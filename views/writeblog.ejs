<% if(locals.confirmation) { %>

    <!DOCTYPE html>
    <html lang="en">

        <head>
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <title>Confirmation</title>

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous" />
        </head>
        <div class="mx-5 py-5" data-scroll>
            <button onclick="window.location.href='/viewblog'" type="button" class="btn btn-primary btn-sm me-3">
                View The Blog
            </button>

            <!-- Outline Success Button -->
            <button onclick="window.location.href='/writeblog'" type="button" class="btn btn-outline-success btn-sm">
                Write a New Blog
            </button>
        </div>

        <% } else { %> <%- include("partials/header.ejs") %>

                <div class="text-center" data-scroll>
                    <h1 class="py-5 display-4 fw-bold text-body-emphasis mainHeading">
                        Write A Blog
                    </h1>
                </div>

                <form action="/submit" method="POST" class="form123 py-5" data-scroll>
                    <div class="mb-3 d-flex flex-wrap align-items-center justify-content-center">
                        <!-- <label for="blogTitle" class="form-label">Blog Title</label> -->
                        <input name="blogTitle" type="text" class="form-control" id="blogTitle" placeholder="Your Title"
                            required />
                    </div>

                    <div class="mb-3 d-flex flex-wrap align-items-center justify-content-center">
                        <!-- <label for="blogContent" class="form-label">Blog Content</label> -->
                        <textarea name="blogContent" class="form-control" id="blogContent" rows="12"
                            placeholder="Your Content" required></textarea>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Submit The Blog</button>
                    </div>
                </form>

                <%- include("partials/footer.ejs") %>
                    <% } %>

    </html>